<div class="containaer">
  <ul>
    <% @article.errors.full_messages.each do |message| %>
    <%# errors.full_messages エラー分をそのまま表示させる%>
      <li><%= message %></li>
    <% end %>
  </ul>
  <%= form_with(model: @article, url: articles_path , method: 'post', local: true) do |f| %>
    <%#model どのモデルを更新しようとしているか。空のarticle %>
    <%# url どこにリクエストを送るか %>
    <%# <method post(投稿する)> %>
    <%# <local 別途説明> %>
    <div>
      <%= f.label :title, 'タイトル' %>
      <%# カラム名のtitleに合わせている %>
    </div>
    <div>
      <%= f.text_field :title, class: 'text' %>
      <%# form helper %>
    </div>
      <div>
        <%= f.label :content, '内容' %>
        <%# カラム名のtitleに合わせている %>
      </div>
    <div>
      <%= f.text_area :content %>
    </div>
    <%= f.submit '保存', class: 'btn-primary' %>
  <% end %>
</div>